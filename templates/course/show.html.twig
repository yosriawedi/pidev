{% extends 'base2.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <h1>Course</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ course.Title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ course.Description }}</td>
            </tr>
            <tr>
                <th>Domain</th>
                <td>{{ course.Domain }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ course.Type }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ course.Price }}</td>
            </tr>
            <tr>
                <th>CreationDate</th>
                <td>{{ course.CreationDate ? course.CreationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <h2>Resources</h2>
    {% if course.ressources is not empty %}
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Format</th>
                    <th>CreationDate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for ressource in course.ressources %}
                    <tr>
                        <td>{{ ressource.id }}</td>
                        <td>{{ ressource.Title }}</td>
                        <td>{{ ressource.Description }}</td>
                        <td>{{ ressource.Format }}</td>
                        <td>{{ ressource.CreationDate ? ressource.CreationDate|date('Y-m-d') : '' }}</td>
                        <td>
                            <a href="{{ path('app_ressource_show', {'id': ressource.id}) }}">show</a>
                            <a href="{{ path('app_ressource_edit', {'id': ressource.id}) }}">edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No resources found for this course.</p>
    {% endif %}

    <a href="{{ path('app_course_index') }}">back to list</a>
    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
